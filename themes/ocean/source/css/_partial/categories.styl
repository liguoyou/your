// Categories

.category-list
  list-unstyled()
  // margin-right -.5rem
  // margin-left -.5rem
  > .category-list-item
    // display inline-block
    padding .5rem 1rem
    &:before
      content "\f18c"
      font-family feathericon
      margin-right .5rem
    > .category-list-link
      color #000
      text-decoration none
      font-weight bold
    > .category-list-child
      list-style none
      overflow hidden
      padding .5rem
      display flex
      flex-wrap wrap
      > .category-list-item
        flex none
        padding .5rem
        > .category-list-link
          display block
          padding .5rem 1.3rem
          background-color #f2f2f2
          color #666
          text-decoration none
          transition .3s
          &:hover
            background-color #1e3c5a
            color #fff